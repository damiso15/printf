#include "main.h"

/**
 * _printf_d - a function that prints a decimal number in base 10 to stdout.
 * @dig: the base 10 decimal to print
 * Return: the total number of the decimals
 */
int _printf_d(va_list dig)
{
	int arr[10], num1, num2, num3, sum, counter;

	num3 = va_arg(dig, int), counter = 0;

	if (num3 < 0)
	{
		num3 *= -1;
		_putchar('-');
		counter++;
	}

	num2 = 1000000000;
	arr[0] = num3 / num2;

	for (num1 = 1; num1 < 10; num1++)
	{
		num2 /= 10;
		arr[num1] = (num3 / num2) % 10;
	}

	sum = 0;
	for (num1 = 0; num1 < 10; num1++)
	{
		sum += arr[num1];
		if (sum != 0 || num1 == 9)
		{
			_putchar('0' + arr[num1]);
			counter++;
		}
	}
	return (counter);
}
